@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    ViewData["SocialText"] = "Sign up with";
}


<div class="container">

    <div class="row">
        <div class="col s12 m6 l6">
            <h4>Register</h4>
        </div>
        <div class="col s12 m6 l6">
        </div>
    </div>
    

    <div class="row">
        <div class="col s12 m5 l5">
            <form method="post" asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <span asp-validation-summary="ModelOnly"></span>

                <div class="row">

                    <div class="input-field col s12">
                        <i class="material-icons prefix">email</i>
                        <input id="email" type="email" class="validate" asp-for="Email" />
                        <label for="email" asp-for="Email">Email</label>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        <input id="password" type="password" class="validate" asp-for="Password" />
                        <label for="password" asp-for="Password">Password</label>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        <input id="confirmPassword" type="password" class="validate" asp-for="ConfirmPassword" />
                        <label for="confirmPassword" asp-for="ConfirmPassword">Confirm password</label>
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                
                <div>
                    <a asp-controller="Subscription" asp-action="Index" class="btn waves-effect waves-light blue-grey lighten-4 black-text">Cancel</a>
                    <button class="btn waves-effect waves-light green" type="submit" name="action">
                        Register
                    </button>
                </div>
            </form>
            <div class="row">
                <div class="input-field col s12 m12 l12">
                    
                    Already have an account? <a asp-controller="Account" asp-action="Login">Login</a>

                </div>
            </div>
        </div>

        @await Html.PartialAsync("_SocialPartial", ViewData)
    </div>
</div>
@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
