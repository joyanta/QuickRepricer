@model QuickRepricer.Core.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container">
    <h4>Contact us</h4>
    <div class="row">
        <form class="col s12" method="post">
            <span asp-validation-summary="ModelOnly"></span>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="icon_prefix" type="text" class="validate" asp-for="Name" />
                    <label for="icon_prefix" asp-for="Name">Name</label>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">phone</i>
                    <input id="icon_telephone" type="tel" class="validate" asp-for="Phone" />
                    <label for="icon_telephone" asp-for="Phone">Telephone</label>
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    <input id="email" type="email" class="validate" asp-for="Email" />
                    <label for="email" asp-for="Email">Email</label>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">message</i>
                    <textarea id="contact-message" class="materialize-textarea" asp-for="Message"></textarea>
                    <label for="contact-message" asp-for="Message">Message</label>
                    <span asp-validation-for="Message"></span>
                </div>
            </div>
            <div>
                <a asp-controller="App" asp-action="Index" class="btn waves-effect waves-light blue-grey lighten-4 black-text">Cancel</a>

                <button class="btn waves-effect waves-light green" type="submit" name="action">
                    Send
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div>


@section scripts {
    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
}


