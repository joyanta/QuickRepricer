@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}


<div class="container">
    <h4>Change Password</h4>
    <div class="row">
        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="col s12">
            <span asp-validation-summary="ModelOnly"></span>
            <div class="row">
                <div class="col s12 m6 l6">
                    <div class="input-field">
                        <i class="material-icons prefix">lock</i>
                        <input id="oldpassword" type="password" class="validate" asp-for="OldPassword" />
                        <label for="oldpassword" asp-for="OldPassword">Old Password</label>
                        <span asp-validation-for="OldPassword"></span>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">lock</i>
                        <input id="newpassword" type="password" class="validate" asp-for="NewPassword" />
                        <label for="newpassword" asp-for="NewPassword">New Password</label>
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">lock</i>
                        <input id="confirmpassword" type="password" class="validate" asp-for="ConfirmPassword" />
                        <label for="confirmpassword" asp-for="ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
            </div>

            <div>
                <a asp-controller="Manage" asp-action="Index" class="btn waves-effect waves-light blue-grey lighten-4 black-text">Cancel</a>

                <button class="btn waves-effect waves-light green" type="submit" name="action">
                    Change
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
